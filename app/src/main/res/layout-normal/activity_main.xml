<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deniz"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/green"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="88dp"
        android:background="#00511818"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/balik"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/g" />

    <ImageView
        android:id="@+id/orange"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toEndOf="@+id/balik2"
        app:srcCompat="@drawable/orange" />

    <ImageView
        android:id="@+id/kirmizi"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toEndOf="@+id/balik1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/kirmizi" />

    <ImageView
        android:id="@+id/balik2"
        android:layout_width="151dp"
        android:layout_height="145dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/balik1"
        android:layout_width="149dp"
        android:layout_height="147dp"
        android:layout_marginStart="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/balik"
        android:layout_width="141dp"
        android:layout_height="142dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="261dp"
        android:background="#008A2020"
        app:layout_constraintBottom_toTopOf="@+id/balik2"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fish" />

    <Button
        android:id="@+id/oyunabasla"
        android:layout_width="354dp"
        android:layout_height="134dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/oyunstart"
        android:backgroundTint="#009C27B0"
        android:text="OYUNA BAŞLA"
        android:textSize="34sp"
        app:cornerRadius="@dimen/cardview_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nasilOynanir"
        android:layout_width="65dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nasiloynanir" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="131dp"
        android:layout_height="22dp"
        android:layout_marginTop="1dp"
        android:text="Nasıl Oynanır"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nasilOynanir" />

</androidx.constraintlayout.widget.ConstraintLayout>