<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deniz"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/green"
        android:layout_width="96dp"
        android:layout_height="91dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="228dp"
        android:background="#00511818"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/g" />

    <ImageView
        android:id="@+id/orange"
        android:layout_width="107dp"
        android:layout_height="83dp"
        android:layout_marginBottom="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toEndOf="@+id/balik2"
        app:srcCompat="@drawable/orange" />

    <ImageView
        android:id="@+id/kirmizi"
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_marginEnd="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/kirmizi" />

    <ImageView
        android:id="@+id/balik2"
        android:layout_width="282dp"
        android:layout_height="245dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/balik1"
        android:layout_width="272dp"
        android:layout_height="288dp"
        android:layout_marginStart="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/balik"
        android:layout_width="288dp"
        android:layout_height="240dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="261dp"
        android:background="#008A2020"
        app:layout_constraintBottom_toTopOf="@+id/balik2"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.286"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016"
        app:srcCompat="@drawable/fish" />

    <Button
        android:id="@+id/oyunabasla"
        android:layout_width="530dp"
        android:layout_height="254dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/oyunstart"
        android:backgroundTint="#009C27B0"
        android:text="OYUNA BAŞLA"
        android:textSize="48sp"
        app:cornerRadius="@dimen/cardview_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nasilOynanir"
        android:layout_width="108dp"
        android:layout_height="125dp"
        android:layout_marginStart="35dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nasiloynanir" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="132dp"
        android:layout_height="38dp"
        android:layout_marginTop="3dp"
        android:text="Nasıl Oynanır"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nasilOynanir" />

</androidx.constraintlayout.widget.ConstraintLayout>